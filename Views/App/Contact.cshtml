@model ContactViewModel
@{
    ViewBag.Title = "Contact Page";
}

@section scripts{
    <script type="text/javascript" src="/node_modules/jquery-validation/dist/jquery.validate.js"></script>
    <script type="text/javascript" src="/node_modules/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
}

<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<h2>Contact</h2>
		<form method="post">
			@if (ViewBag.UserMessage != null)
			{
				<div>@ViewBag.UserMessage</div>
			}

		    <span asp-validation-summary="ModelOnly"></span>
		
			<div class="form-group">
				<label asp-for="Name"></label>
				<input asp-for="Name" class="form-control" />
			    <span asp-validation-for="Name" class="text-muted"></span>
			</div>
		
			<div class="form-group">
				<label asp-for="Email"></label>
				<input type="email" asp-for="Email" class="form-control" />
			    <span asp-validation-for="Email" class="text-muted"></span>
			</div>
		
			<div class="form-group">
				<label asp-for="Message"></label>
				<textarea cols="40" rows="4" asp-for="Message" class="form-control"></textarea>
			    <span asp-validation-for="Message" class="text-muted"></span>
			</div>
		
			<div class="form-group">
				<a asp-controller="App" asp-action="Index" class="btn btn-default">Cancel</a>
				<input type="submit" value="Send Message" class="btn btn-success" />
			</div>
		</form>
	</div>
</div>